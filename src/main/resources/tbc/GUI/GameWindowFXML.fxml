<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="639.0" prefWidth="1000.0" style="-fx-background-color: #006400#006400;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tbc.GUI.GameWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="The Bachelor's Chase">
            <items>
                  <MenuItem fx:id="menuChangeUsername" mnemonicParsing="false" onAction="#changeUsername" text="Username Ã¤ndern" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="menuLogOut" mnemonicParsing="false" onAction="#logOut" text="Logout" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hilfe">
            <items>
              <MenuItem fx:id="menuInfo" mnemonicParsing="false" onAction="#giveInfo" text="Info" />
                  <MenuItem fx:id="menuChatInfo" mnemonicParsing="false" onAction="#giveChatInfo" text="Chat Info" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="611.0" prefWidth="726.0" style="-fx-text-fill: #000000#000000;" text="Hier kommt das Spielfeld..." BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </center>
   <right>
      <VBox prefHeight="601.0" prefWidth="280.0" BorderPane.alignment="CENTER">
         <children>
            <TextField editable="false" focusTraversable="false" text="Momentaner Stand der Konten: ">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TableView fx:id="highscoreTable" focusTraversable="false" prefHeight="253.0" prefWidth="260.0">
              <columns>
                <TableColumn fx:id="highscoreName" editable="false" minWidth="100.0" prefWidth="180.0" resizable="false" sortable="false" text="Name" />
                <TableColumn fx:id="highscoreCoins" resizable="false" text="Coins" />
              </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TableView>
            <TextArea fx:id="txtAChat" editable="false" prefHeight="383.0" prefWidth="260.0" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <TextField fx:id="msgField" prefHeight="125.0" prefWidth="260.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="btnSend" alignment="CENTER" focusTraversable="false" mnemonicParsing="false" onAction="#sendMsg" prefHeight="27.0" prefWidth="272.0" text="Sende">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
