<BorderPane prefHeight="639.0" prefWidth="1000.0" style="-fx-background-color: #006400#006400;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tbc.GUI.GameWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="The Bachelor's Chase">
            <items>
                  <MenuItem fx:id="menuChangeUsername" mnemonicParsing="false" onAction="#changeUsername" text="Change username" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="menuLogOut" mnemonicParsing="false" onAction="#logOut" text="Logout" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="menuInfo" mnemonicParsing="false" onAction="#giveInfo" text="Info" />
                  <MenuItem fx:id="menuChatInfo" mnemonicParsing="false" onAction="#giveChatInfo" text="Chat Info" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <right>
      <VBox prefHeight="601.0" prefWidth="280.0" BorderPane.alignment="CENTER">
         <children>
            <TextField editable="false" focusTraversable="false" text="Current coins of the player: ">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TableView fx:id="highscoreTable" focusTraversable="false" prefHeight="253.0" prefWidth="260.0">
              <columns>
                <TableColumn fx:id="highscoreName" editable="false" minWidth="100.0" prefWidth="180.0" resizable="false" sortable="false" text="Name" />
                <TableColumn fx:id="highscoreCoins" resizable="false" text="Coins" />
              </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TableView>
            <TextArea editable="false" focusTraversable="false" prefHeight="150.0" prefWidth="260.0" text="Do NOT use '#' for the chat or username!" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextArea>
            <TextArea fx:id="txtAChat" editable="false" prefHeight="369.0" prefWidth="260.0" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <TextField fx:id="msgField" prefHeight="75.0" prefWidth="260.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="btnSend" alignment="CENTER" focusTraversable="false" mnemonicParsing="false" onAction="#sendMsg" prefHeight="27.0" prefWidth="272.0" text="Send">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <right>
            <VBox alignment="TOP_CENTER" prefHeight="610.0" prefWidth="118.0" spacing="20.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="15.0" left="10.0" top="15.0" />
               </padding>
               <children>
                  <Button focusTraversable="false" minHeight="100.0" mnemonicParsing="false" onAction="#showPlayerList" prefWidth="100.0" text="Playerlist" />
                  <Button focusTraversable="false" minHeight="100.0" mnemonicParsing="false" onAction="#showLobbyList" prefWidth="100.0" text="Lobbylist" />
                  <Button focusTraversable="false" minHeight="100.0" mnemonicParsing="false" onAction="#showCards" prefWidth="100.0" text="Cards" />
                  <Button fx:id="btnRdy" focusTraversable="false" minHeight="100.0" mnemonicParsing="false" onAction="#rdyForTheGame" prefWidth="100.0" text="Ready" />
                  <Button fx:id="btnNewMatch" disable="true" focusTraversable="false" minHeight="100.0" mnemonicParsing="false" onAction="#startNewMatch" prefWidth="100.0" text="New match" />
               </children>
            </VBox>
         </right>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <TextArea fx:id="gameChatArea" editable="false" prefHeight="108.0" prefWidth="592.0" wrapText="true" BorderPane.alignment="CENTER" />
               </bottom>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </BorderPane.margin>
               <center>
                  <BorderPane prefHeight="228.0" prefWidth="592.0" BorderPane.alignment="CENTER">
                     <top>
                        <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <ImageView fx:id="imageView1" fitHeight="193.0" fitWidth="126.0" layoutX="8.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView2" fitHeight="193.0" fitWidth="126.0" layoutX="146.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView3" fitHeight="193.0" fitWidth="126.0" layoutX="307.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView4" fitHeight="193.0" fitWidth="126.0" layoutX="458.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </Pane>
                     </top>
                     <bottom>
                        <Pane prefHeight="208.0" prefWidth="592.0" BorderPane.alignment="CENTER">
                           <children>
                              <ImageView fx:id="imageView5" fitHeight="202.0" fitWidth="141.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView6" fitHeight="202.0" fitWidth="141.0" layoutX="166.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView7" fitHeight="202.0" fitWidth="141.0" layoutX="296.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="imageView8" fitHeight="202.0" fitWidth="141.0" layoutX="451.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </Pane>
                     </bottom>
                  </BorderPane>
               </center>
            </BorderPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
